@model IEnumerable<AplicacionClientes.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Registros";
}

<h1 class = "text-center">Lista de Usuarios</h1>

<div class="row">
    <div class="col-sm-12">
        <div class = "float-right">
            <a asp-action = "Crear" asp-controller = "Usuario" class="btn btn-success">Crear Usuario</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class = "card border">
            <div class = "card-header">
                <h3>USUARIOS</h3>
            </div>
            <div class = "card-body">
                <div class ="table-responsive">
                    @if(Model.Count()>0){
                        <table class="table table-bordered" width="100%" cellspacing=0>
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => x.Nombre)</th>
                                    <th>@Html.DisplayNameFor(x => x.Apellido)</th>
                                    <th>@Html.DisplayNameFor(x => x.Edad)</th>
                                    <th>@Html.DisplayNameFor(x => x.Correo_electronico)</th>
                                    <th>@Html.DisplayNameFor(x => x.Tipo_usuario)</th>
                                    <th>Borrar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x => usuario.Nombre)</td>
                                        <td>@Html.DisplayFor(x => usuario.Apellido)</td>
                                        <td>@Html.DisplayFor(x => usuario.Edad)</td>
                                        <td>@Html.DisplayFor(x => usuario.Correo_electronico)</td>
                                        <td>@Html.DisplayFor(x => usuario.Tipo_usuario)</td>
                                        <td>
                                            <a class="btn btn-danger" asp-action = "Eliminar" asp-route-id = "@usuario.Id">
                                                Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No se encontraron registros</p>
                    }
                       
                </div>
            </div>
        </div>
    </div>
</div>
