@model IEnumerable<AplicacionClientes.Models.Factura>
@{
    ViewData["Title"] = "Lista de Facturas";
}

<h1 class = "text-center">Lista de Facturas</h1>

<div class="row">
    <div class="col-sm-12">
        <div class = "float-right">
            <a asp-action = "Crear" asp-controller = "Factura" class="btn btn-success">Crear Factura</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class = "card border">
            <div class = "card-header">
                <h3>FACTURAS</h3>
            </div>
            <div class = "card-body">
                <div class ="table-responsive">
                    @if(Model.Count()>0){
                        <table class="table table-bordered" width="100%" cellspacing=0>
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => x.Id_usuario)</th>
                                    <th>@Html.DisplayNameFor(x => x.Folio)</th>
                                    <th>@Html.DisplayNameFor(x => x.Saldo)</th>
                                    <th>@Html.DisplayNameFor(x => x.Fecha_facturacion)</th>
                                    <th>@Html.DisplayNameFor(x => x.Fecha_creacion)</th>
                                    <th>Borrar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var factura in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(x => factura.Id_usuario)</td>
                                        <td>@Html.DisplayFor(x => factura.Folio)</td>
                                        <td>@Html.DisplayFor(x => factura.Saldo)</td>
                                        <td>@Html.DisplayFor(x => factura.Fecha_facturacion)</td>
                                        <td>@Html.DisplayFor(x => factura.Fecha_creacion)</td>
                                        <td>
                                            <a class="btn btn-danger" asp-action = "Eliminar" asp-route-id = "@factura.Id">
                                                Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No se encontraron registros</p>
                    }
                       
                </div>
            </div>
        </div>
    </div>
</div>

